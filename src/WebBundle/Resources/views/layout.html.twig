{% extends "::webbase.html.twig" %}

{% block title 'Недвижимость.' %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('_index') }}">Сайт недвижимости</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li {% if page is defined and page=="about" %}class="active"{% endif %}>
                        <a href="{{ path('_about') }}">О нас</a>
                    </li>
                    <li {% if page is defined and page=="catalog" %}class="active"{% endif %}>
                        <a href="{{ path('_catalog') }}">Каталог</a>
                    </li>
                    <li {% if page is defined and page=="contact" %}class="active"{% endif %}>
                        <a href="{{ path('_contact') }}">Контакты</a>
                    </li>
                    <li>
                        <a href="{{ path('_home') }}">Вход</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    
    <form method="POST" action="{{ path("_filter") }}">
        <input type="hidden" name="item" id="item" value="{% if item is defined %}{{ item }}{% endif %}"/>
        <!-- Page Content -->
        <div class="container">

            <div class="row">
                <div class="col-md-3">
                    <p class="lead">Фильтр</p>
                    <div class="list-group">
                        <a href="{{ path('_filter', {item: -1}) }}" class="list-group-item">Все объекты</a>
                        <a href="{{ path('_filter', {item: 0}) }}" class="list-group-item">Квартиры</a>
                        <a href="{{ path('_filter', {item: 1}) }}" class="list-group-item">Комнаты</a>
                        <a href="{{ path('_filter', {item: 2}) }}" class="list-group-item">Дачи</a>
                        <a href="{{ path('_filter', {item: 3}) }}" class="list-group-item">Дама</a>
                        <a href="{{ path('_filter', {item: 4}) }}" class="list-group-item">Гаражи</a>
                        <a href="{{ path('_filter', {item: 5}) }}" class="list-group-item">Земельные участки</a>
                        <br>
                        Вид объекта:
                        <select id="view" name="view" class="form-control" style="width: 80%;">
                            <option value="-1">---</option>
                            <option value="0">новостройка</option>
                            <option value="1">вторичка</option>
                            <option value="2">другое</option>
                        </select>
                        Опции:
                        <select id="option" name="option" class="form-control" style="width: 80%;">
                            <option value="-1">---</option>
                            <option value="0">аренда в сутки</option>
                            <option value="1">аренда в месяц</option>
                            <option value="2">продажа</option>
                        </select>
                        Площадь (м2) от:
                        <input class="form-control" style="width: 100%;" id="area1" name="area1" value=""/>
                        Площадь (м2) до:
                        <input class="form-control" style="width: 100%;" id="area2" name="area2" value=""/>
                        Количество комнат:
                        <input class="form-control" style="width: 100%;" id="rooms" name="rooms" value=""/>
                        Стоимость (руб.) от:
                        <input class="form-control" style="width: 80%;" id="price1" name="price1" value=""/>
                        Стоимость (руб.) до:
                        <input class="form-control" style="width: 80%;" id="price2" name="price2" value=""/>
                        <br>
                        <input class="btn btn-default" type="submit"/>
                    </div>
                </div>
                {% block content %}{% endblock %}
            </div>

        </div>
    <!-- /.container -->
    </form>
    {% block javascripts %}
        <script src="{{ asset('bundles/web/js/jquery.js') }}"></script>
        <script src="{{ asset('bundles/web/js/bootstrap.min.js') }}"></script>
    {% endblock %}
    
{% endblock %}
